<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/offer_description"
    android:padding="@dimen/actions_padding"
    android:paddingLeft="@dimen/actions_padding_left"
    android:paddingRight="@dimen/actions_padding_left"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true">

    <TextView
        android:id="@+id/offer_promo_name"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Promo name"
        android:textColor="@color/white"
        android:textAppearance="@android:style/TextAppearance.Material.Large"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@+id/offer_promo_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1" >

        <TextView
            android:id="@+id/offer_company_name"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/offer_promo_name"
            android:text="Little big company"
            android:layout_weight="0.3"
            android:textColor="@color/white"
            android:textAppearance="@android:style/TextAppearance.Material.Small"/>
        <TextView
            android:id="@+id/offer_date_created"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textAppearance="@android:style/TextAppearance.Material.Small"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small"
            android:layout_weight="0.7"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:textStyle="italic"/>
    </LinearLayout>





</RelativeLayout>