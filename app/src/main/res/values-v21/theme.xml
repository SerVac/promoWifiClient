<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="MainTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowContentTransitions">true</item>

        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowSharedElementEnterTransition">
            @transition/offer_detail_transition
        </item>
        <item name="android:windowSharedElementExitTransition">
            @transition/offer_detail_transition
        </item>
        <item name="android:statusBarColor">@color/darkteal</item>

    </style>

    <style name="Widget.MyApp.Toolbar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/teal</item>
        <item name="theme">@style/ThemeOverlay.MyApp.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.Widget.Event.Toolbar.Title</item>
    </style>

    <style name="ThemeOverlay.MyApp.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
    </style>
    <style name="TextAppearance.Widget.Event.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>