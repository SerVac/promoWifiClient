<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/offer_description"
    android:padding="@dimen/actions_padding"
    android:paddingLeft="@dimen/actions_padding_left"
    android:paddingRight="@dimen/actions_padding_left"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:background="@color/blue">


    <TextView
        android:id="@+id/offer_promo_name"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        tools:text="Promo name"
        android:textColor="@color/white"
        android:textSize="@dimen/offer_description_promo_text_size_list"
        android:textStyle="normal"
        android:gravity="left"
        android:layout_marginTop="@dimen/offer_description_promo_margin_list"/>

    <TextView
            android:id="@+id/offer_company_name"
            tools:text="Little big company"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textSize="@dimen/offer_description_company_text_size_list"
            android:gravity="left"
            android:layout_marginTop="@dimen/offer_description_company_margin_list"
            android:layout_marginBottom="@dimen/offer_description_company_margin_bottom_list"/>

</LinearLayout>