<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/filterSalesTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Show sales from"
        />
    <TextView
        android:id="@+id/filterSalesPercent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="30%"
        />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/filterSalesSeek"
        android:layout_gravity="center_horizontal"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fashion"
        android:id="@+id/filterFashion" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Electrics"
        android:id="@+id/filterElectronics" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Collectiables &amp; Art"
        android:id="@+id/filtersCollectiablesArt" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home &amp; Garden"
        android:id="@+id/filtersHomeGarden" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sporting"
        android:id="@+id/filterSports" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Motors"
        android:id="@+id/filterMotor" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toys &amp; Hobbies"
        android:id="@+id/filterToysHobbies" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entertainment"
        android:id="@+id/filterEntertainment" />


</LinearLayout>