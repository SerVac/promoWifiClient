<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relaGrid"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <me.loc2.loc2me.ui.md.SquareFrameLayout
        android:id="@+id/squared_details_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/offer_details_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_above="@+id/offer_action_buttons_layout"
            android:transitionName="@string/card_to_details"
            android:layout_alignParentTop="true" />
    </me.loc2.loc2me.ui.md.SquareFrameLayout>

    <include android:id="@+id/offer_action_buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/offer_action_buttons"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />
    <include
        layout="@layout/back_button"
        android:layout_width="@dimen/size_button_message"
        android:layout_height="@dimen/size_button_message"
        android:visibility="invisible"
        android:layout_gravity="end|bottom"
        android:id="@+id/back_button"
        android:layout_marginRight="@dimen/back_button_margin"
        android:layout_alignBottom="@+id/squared_details_image"
        android:layout_alignParentEnd="true" />
</RelativeLayout>