<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.loc2.loc2me">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!--<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>-->

    <uses-feature android:name="android.hardware.wifi" />

    <application
        android:name=".Loc2meApplication"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/MainTheme">

        <activity
            android:name="me.loc2.loc2me.ui.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="me.loc2.loc2me.ui.md.OfferDetailsActivity" />


        <service android:name="me.loc2.loc2me.core.TimerService" android:enabled="true" android:exported="false" />
        <service android:name="me.loc2.loc2me.core.OfferLoaderService" android:enabled="true" android:exported="false" />
        <service android:name="me.loc2.loc2me.core.OfferEventService" android:enabled="true" android:exported="false" />
        <service android:name="me.loc2.loc2me.core.WifiScanService" android:enabled="true" android:exported="false" />
    </application>
</manifest>
